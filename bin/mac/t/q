#!/Melify/bin/mac/tclkit

namespace eval queue {
    set x [list]
    set ticks 0

    ######################################################
    ####
    ######################################################
    proc init {ticks} {
	set queue::x [list]
	set queue::ticks $ticks
    }

    ######################################################
    ####
    ######################################################
    proc add {val} {
	lappend queue::x $val

	if {[llength $queue::x] > $queue::ticks} {
	    set queue::x [lrange $queue::x end-[expr $queue::ticks -1] end]
	}
    }
    
    ######################################################
    ####
    ######################################################
    proc dir {buy sell} {
	if {[llength $queue::x] != $queue::ticks} {
	    return
	}

	set s1 [lsort -increasing -real $queue::x]
	set s2 [lsort -decreasing -real $queue::x]
	
	if {$s1 == $queue::x} {
	    buy [lindex $queue::x end]
	    queue::init $queue::ticks
	}

	if {$s2 == $queue::x} {
	    sell [lindex $queue::x end]
	    queue::init $queue::ticks
	}

	return ""
    }
}

######################################################
####
######################################################
proc buy {price} {
    puts "BUY > $price"
}

######################################################
####
######################################################
proc sell {price} {
    puts "SELL > $price"
}

######################################################
####
######################################################
queue::init 3

queue::add 4.0
queue::add 5.0
queue::add 10.0
queue::add 55.0
queue::add 65.0
queue::dir buy sell

queue::add 90.0
queue::add 65.0
queue::add 55.0
queue::add 5.0
queue::dir buy sell

queue::init 5.0
queue::add 55.0
queue::add 65.0
queue::add 10.0
queue::dir buy sell
