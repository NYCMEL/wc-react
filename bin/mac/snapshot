#!/Melify/bin/mac/tclkit

if {[file exist ".git"] == 0} {
    puts "NO .git FOLDER FOUND"
    exit
}

file mkdir /Users/melify/snapshots

set folder [lindex [split [pwd] /] end]
puts $folder

set date [clock format [clock seconds] -format %D]
regsub -all "/" $date "-" date

if {[lindex $argv 0] == ""} {
    set file "/Users/melify/snapshots/$date.$folder.zip"
} else {
    set file "/Users/melify/snapshots/$date.$folder.[lindex $argv 0].zip"
}

exec /usr/bin/git archive HEAD --format=zip > $file


