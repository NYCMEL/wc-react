#!/Melify/bin/mac/tclkit

if {$argc != 1} {
    puts "Type is required: avi, etc."
    exit
}

set files [glob -nocomplain *.[lindex $argv[0]]

if {[llength $files] == 0} {
   puts "Can not find any mp4 files"
   exit
}

set cnt 0

foreach i $files {
    set file [file rootname [file tail $i]]
    puts "[incr cnt]: $file"

    catch {
	exec ffmpeg -i $i $file.mp4
    }
}
