#!/Melify/bin/mac/tclkit

#######################################################
#### DIR LISTING ON SERVER
#### http://localhost/mtk/os/dir?path=/Melify/mtk/dev/tk/lib/components/w/html&files=*
#######################################################
source /Melify/mtk/dev/tk//src/cgi/cgi.tcl

source ../../app.cfg

set env(HOME) "/tmp"

# DO NOT PRINT ANYTHIN TO STDOUT
namespace eval tk {}
proc tk::bugger {args} {}

#DUMMY IT UP
proc Trace {args} {}

lappend auto_path\
    /Melify/mtk/$ENV/tk/src\
    /Melify/mtk/$ENV/tk/src/db\
    /Melify/mtk/$ENV/tk/src/utl\
    /Melify/mtk/$ENV/tk/src/eng

cgi_input
foreach i [import_list] {
    import $i
}

cd $::path

regsub -all "\n" [glob -nocomplain $::files] "|" rval

put "Content-Type: application/json\n\n"
puts $rval
