#!/Melify/bin/mac/tclkit

namespace eval queue {
    set x [list]
    set ticks 0

    ######################################################
    ####
    ######################################################
    proc init {ticks} {
	set queue::x [list]
	set queue::ticks $ticks
    }

    ######################################################
    ####
    ######################################################
    proc add {val} {
	lappend queue::x $val

	if {[llength $queue::x] > $queue::ticks} {
	    set queue::x [lrange $queue::x end-[expr $queue::ticks -1] end]
	}
    }
    
    ######################################################
    ####
    ######################################################
    proc dir {} {
	if {[llength $queue::x] != $queue::ticks} {
	    return
	}

	set s1 [lsort -increasing $queue::x]
	set s2 [lsort -decreasing $queue::x]
	
	if {$s1 == $queue::x} {
	    queue::init queue::ticks
	    return "S"
	}

	if {$s2 == $queue::x} {
	    queue::init queue::ticks
	    return "B"
	}

	return ""
    }
}

######################################################
####
######################################################
queue::init 3

queue::add 04
queue::add 05
queue::add 10
queue::add 55
queue::add 65
puts --[queue::dir]

queue::init 3
queue::add 65
queue::add 55
queue::add 10
puts --[queue::dir]

queue::init 3
queue::init 5
queue::add 55
queue::add 65
queue::add 10
puts --[queue::dir]
