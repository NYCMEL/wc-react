#!/Melify/bin/mac/tclkit

dict set ::tk(pattern) phone		{placeholder "###-###-####"	::tk(pattern) {\d{3}[\-]\d{3}[\-]\d{4}}}
dict set ::tk(pattern) text		{placeholder ""			::tk(pattern) {[a-zA-Z ]+}}
dict set ::tk(pattern) alnum		{placeholder ""			::tk(pattern) {[a-zA-Z][a-zA-Z0-9\s]*}}
dict set ::tk(pattern) email		{placeholder ""			::tk(pattern) {[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$}}
dict set ::tk(pattern) city		{placeholder ""			::tk(pattern) {[A-Za-z ]+}}
dict set ::tk(pattern) state		{placeholder "##"		::tk(pattern) {[A-Za-z]{2}}}
dict set ::tk(pattern) zipcode	{placeholder "#####-####"	::tk(pattern) {\d{5,5}(-\d{4,4})?}}
dict set ::tk(pattern) ssn		{placeholder "###-##-####	"::tk(pattern) {^(\d{3}-|(\d{3})\s)\d{2}-\d{4}$}}
dict set ::tk(pattern) amount		{placeholder ""			::tk(pattern) {^[$\-\s]*[\d\,]*?([\.]\d{0,2})?\s*$}}
dict set ::tk(pattern) number		{placeholder ""			::tk(pattern) {\d*}}
dict set ::tk(pattern) date		{placeholder "mm/dd/yyyy"	::tk(pattern) {\d{1,2}/\d{1,2}/\d{4}}}

puts [dict get $::tk(pattern) phone]

