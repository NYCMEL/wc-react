#!/Melify/bin/mac/tclkit

file delete -force ./min

file mkdir ./min

set tmp [glob -nocomplain *.css]
append tmp " " 
append tmp [glob -nocomplain *.js]

set cnt 0
foreach i $tmp {
    puts "[incr cnt]: $i"

    if {[catch {
	exec /usr/bin/java -jar /Melify/bin/mac/compressor/yui.jar $i > ./min/[file rootname $i].min[file extension $i]
    } e] != 0} {
	puts >>>$e\n
    }
}
