#!/Melify/bin/mac/tclkit

set files [glob -nocomplain *.js]

set cnt 0
puts "babel started:"
foreach i $files {
    incr cnt
    set jsfile [file rootname $i]
    
    puts "\t$cnt - processing $jsfile"
    exec /usr/local/bin/babel $jsfile.js --out-file $jsfile.es6 --presets=/usr/local/lib/node_modules/babel-preset-latest
}

puts "babel finshed"
