namespace eval tk {}

source /Melify/mtk/$ENV/tk/src/utl/mproc.tcl
source /Melify/mtk/$ENV/tk/src/eng/tk.tcl

set env(HOME) "/"

####################################################
#### 
####################################################
proc tk::check {} {
    lappend ::auto_path $::starkit::topdir/lib/vfs
    
    #TK RUNNING ON LOCALHOST = 127.0.0.1
    package require vfs
    vfs::urltype::Mount http
}

####################################################
#### PICK AN OS
####################################################
source ../../app.vfs/main.tcl
