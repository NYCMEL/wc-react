#!/Melify/bin/mac/tclsh

fconfigure stdin -blocking 0 -buffering line
fileevent  stdin readable [list GetData stdin]

######################################################
##### 
######################################################
proc GetData {chan} {
    if {[gets $chan line] >= 0} {
	#puts stderr $line;flush stderr
	puts "jQuery('#msg-div').append('<div>[clock seconds] - SERVER: [string toupper $line]</div>')";flush stdout
    }
}

puts "jQuery('#msg-div').append('Ready...')";flush stdout

vwait forever
