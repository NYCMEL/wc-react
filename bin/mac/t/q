#!/Melify/bin/mac/tclkit

set date "2019-11-19"
set nticks 4
set symbol "AAPL"

############################
set u 0
set d 0
set p 0
set t 0
set v 0

source "~/Dropbox/Trader/stocks/$symbol/$date/$symbol.txt"

set cnt 0

puts "------------------------------------------------------------------------"
puts "  X PRICE     VOLUME  TIME               BIDs  BIDP           ASKs  ASKp"
puts "------------------------------------------------------------------------"

foreach k [dict key $stocks] {
    foreach {i j} [dict get $stocks $k] {
	set a($i) $j
    }
    
    if {$a(lastPrice) > $p} {
	# PRICE IS UP
	incr u; set d 0
	set p $a(lastPrice)
    } elseif {$a(lastPrice) < $p} {
	# PRICE IS DOWN
	incr d; set u 0
	set p $a(lastPrice)
    }

    set fmt "%3s %5.4f0 %d %d %8d %10.4f0 %8d %10.4f0"

    if {$u == 4} {
	puts [format $fmt "B" $p $a(totalVolume) $a(quoteTimeInLong) $a(bidSize) $a(bidPrice) $a(askSize) $a(askPrice)]
	set u 0;set d 0
    }

    if {$d == 4} {
	puts [format $fmt "S" $p $a(totalVolume) $a(quoteTimeInLong) $a(bidSize) $a(bidPrice) $a(askSize) $a(askPrice)]
	set u 0;set d 0
    }
}

