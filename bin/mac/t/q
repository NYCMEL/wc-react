#!/Melify/bin/mac/tclkit

namespace eval queue {
    set x [list]
    set ticks 3

    ######################################################
    ####
    ######################################################
    proc init {} {
	set queue::x [list]
    }

    ######################################################
    ####
    ######################################################
    proc add {val} {
	lappend queue::x $val

	if {[llength $queue::x] > $queue::ticks} {
	    set queue::x [lrange $queue::x end-[expr $queue::ticks -1] end]
	}
    }
    
    ######################################################
    ####
    ######################################################
    proc dir {} {
	set s1 [lsort -increasing $queue::x]
	set s2 [lsort -decreasing $queue::x]
	
	if {$s1 == $queue::x} {
	    queue::init
	    return "S"
	}

	if {$s2 == $queue::x} {
	    queue::init
	    return "B"
	}

	return ""
    }
}

######################################################
####
######################################################
queue::init

queue::add 10
queue::add 55
queue::add 65
puts --[queue::dir]

queue::add 65
queue::add 55
queue::add 10
puts --[queue::dir]

queue::add 55
queue::add 65
queue::add 10
puts --[queue::dir]
