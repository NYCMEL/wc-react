#!/Melify/bin/mac/tclkit

set files [glob -nocomplain *.mp4]

if {[llength $files] == 0} {
   puts "Can not find any mp4 files"
   exit
}

set cnt 0

foreach i $files {
    set file [file rootname [file tail $i]]
    puts "[incr cnt]: $file"

    catch {
	exec ffmpeg -i $i $file.webm
    }

    catch {
	exec ffmpeg -i $i $file.ogv
    }
}
